// VS Code settings for this workspace
{
  // ---------- Performance / sanity ----------
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,

    // your repo-specific heavy folders
    "osrm/data/**": true,
    "backend/out/**": true
  },
  "search.exclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,

    // your repo-specific heavy folders
    "osrm/data/**": true,
    "backend/out/**": true
  },

  // ---------- Spell checker (CSpell) ----------
  // Keep it for docs only (stops noise in code), and keep it low severity
  "cSpell.enabled": true,
  "cSpell.enabledFileTypes": {
    "markdown": true,
    "plaintext": true
  },
  "cSpell.diagnosticLevel": "Hint",

  // ---------- Python ----------
  // Windows venv in: backend/.venv
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/Scripts/python.exe",
  // Make "app" imports resolve (backend/app/*)
  "python.analysis.extraPaths": ["${workspaceFolder}/backend"],
  // Auto-load backend/.env for run/debug in VS Code
  "python.envFile": "${workspaceFolder}/backend/.env",
  "python.terminal.activateEnvironment": true,

  // Ruff native server (no deprecated ruff-lsp settings)
  "ruff.nativeServer": "on",

  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  },

  // ---------- ESLint: scope it to your frontend folder so it doesn't scan backend ----------
  // Change "frontend" if your folder name is different.
  "eslint.workingDirectories": [{ "directory": "frontend", "changeProcessCWD": true }],

  "python.terminal.useEnvFile": true

  // ---------- Docker Compose schema help ----------
  "yaml.schemas": {
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [
      "docker-compose.yml",
      "docker-compose.*.yml",
      "compose.yml",
      "compose.*.yml"
    ]
  }
}
